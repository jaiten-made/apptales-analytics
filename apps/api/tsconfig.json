{
  "compilerOptions": {
    /* Environment */
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Monorepo Isolation */
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "skipLibCheck": true,

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Build Workflow */
    "outDir": "dist",
    "rootDir": "src",

    /* Interop & Safety */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "../../node_modules", "dist"]
}
