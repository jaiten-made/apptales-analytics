generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id         String          @id @default(cuid())
  name       String
  createdAt  DateTime        @default(now())
  customerId String
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  sessions   Session[]
}

model EventIdentity {
  id        String   @id @default(cuid())
  key       String
  createdAt DateTime @default(now())
  events    Event[]
}

model Customer {
  id        String   @id @default(cuid())
  email     String   @unique 
  createdAt DateTime @default(now())
  projects  Project[]
}

model Event {
  id              String        @id @default(cuid())
  type            String
  properties      Json
  createdAt       DateTime      @default(now())
  eventIdentityId String
  eventIdentity   EventIdentity @relation(fields: [eventIdentityId], references: [id])
  sessionId       String
  session         Session       @relation("SessionEvents", fields: [sessionId], references: [id], onDelete: Cascade) // Updated to reflect the relationship
}

model Session {
  id        String   @id @default(cuid())
  sessionId String   @default(cuid())
  createdAt DateTime @default(now())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  events    Event[]  @relation("SessionEvents")
}
